<Window x:Class="NewsMonitor.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewsMonitor.WPF"
        mc:Ignorable="d"
        Title="News Monitor" Height="450" Width="800">
  <StackPanel>
    <ToolBar>
      <Button>Run</Button>
      <Button VerticalAlignment="Bottom" Click="Button_Click">Settings</Button>
    </ToolBar>
    <Button x:Name="FindArticlesButton" Content="Button" HorizontalAlignment="Left" Margin="33,28,0,0" VerticalAlignment="Top" Width="75" Click="FindArticlesButton_Click"/>
    <DataGrid x:Name="NewsArticlesDataGrid" 
      HorizontalAlignment="Left" Height="334" 
      Margin="10,75,0,0" VerticalAlignment="Top" 
      Width="772"/>
  </StackPanel>
</Window>
