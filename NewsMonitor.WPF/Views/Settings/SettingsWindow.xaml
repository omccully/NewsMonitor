<Window x:Class="NewsMonitor.WPF.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewsMonitor.WPF"
        mc:Ignorable="d"
        Padding="50"
        Title="Settings" Height="450" Width="800">
  <DockPanel>
    <TreeView x:Name="SettingsPageSelectorTreeView" Width="200" DockPanel.Dock="Left">
    </TreeView>
    <DockPanel DockPanel.Dock="Right">
      <StackPanel MinHeight="40" VerticalAlignment="Bottom" HorizontalAlignment="Right"
        Height="40" DockPanel.Dock="Bottom" Orientation="Horizontal" >
        <!-- Add other buttons here if needed -->
        <Button x:Name="OkButton"  Padding="10,0,10,0" Margin="5,5,5,5" Click="OkButton_Click">Ok</Button>
      </StackPanel>
      <Frame x:Name="SettingsFrame" DockPanel.Dock="Top" >
        <!-- Frame fills remaining space -->
      </Frame>
    </DockPanel>
    
    
  </DockPanel>
</Window>
