<views:NewsSharerWindow x:Class="NewsMonitor.Extensions.NewsSharers.Twitter.TwitterNewsSharerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:NewsMonitor.WPF.Views;assembly=NewsMonitor.WPF"
        mc:Ignorable="d"
        Title="Twitter News Sharer" Width="700"
                        SizeToContent="Height">
  <DockPanel>
    <StackPanel DockPanel.Dock="Top">
      <Label Content="Comment" />
      <TextBox x:Name="CommentTextBox"/>
      <Label Content="URL" />
      <TextBox x:Name="UrlTextBox"/>
      <Button x:Name="PostButton" 
              Margin="0,10,0,0" Height="40" Click="PostButton_Click">
        Post tweet
      </Button>
    </StackPanel>


  </DockPanel>
</views:NewsSharerWindow>
