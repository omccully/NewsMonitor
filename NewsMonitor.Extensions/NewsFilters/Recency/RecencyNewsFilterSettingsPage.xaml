<views:SettingsPage
      x:Class="NewsMonitor.Extensions.NewsFilters.Recency.RecencyNewsFilterSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NewsMonitor.Extensions.NewsFilters.Recency"
      xmlns:views="clr-namespace:NewsMonitor.WPF.Views;assembly=NewsMonitor.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RecencyNewsFilterSettingsPage">
  <Page.Resources>
    <Style TargetType="TextBox">
      <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>
  </Page.Resources>
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="auto"></ColumnDefinition>
      <ColumnDefinition></ColumnDefinition>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"></RowDefinition>
    </Grid.RowDefinitions>
    <Label HorizontalAlignment="Right" 
           Grid.Row="0" Grid.Column="0">Max Article Age (days):</Label>
    <TextBox x:Name="MaxArticleAgeDaysTextBox" 
             HorizontalAlignment="Left" Width="100" Grid.Row="0" Grid.Column="1"></TextBox>
  </Grid>
</views:SettingsPage>
